<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/mod_group_name"
        android:hint="@string/new_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:id="@+id/mod_group_icon"
        android:hint="@string/new_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/mod_group_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/mod_group_noti"
        android:hint="@string/new_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/mod_group_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/mod_group_save"
        android:text="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="save"
        android:layout_alignBaseline="@+id/mod_group_cancell"
        android:layout_alignBottom="@+id/mod_group_cancell"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="111dp"
        android:layout_marginEnd="111dp" />

    <Button
        android:id="@+id/mod_group_cancell"
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Cancel"
        android:layout_above="@+id/mod_group_noti"
        android:layout_toLeftOf="@+id/mod_group_save"
        android:layout_toStartOf="@+id/mod_group_save"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />


</RelativeLayout>