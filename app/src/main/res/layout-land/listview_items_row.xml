<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_weight="10">

    <ImageView
        android:id="@+id/items_ima1"
        android:layout_weight="3"
        android:src="@drawable/man"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/items_price"
        android:layout_toStartOf="@+id/items_price" />

    <TextView
        android:id="@+id/items_price"
        android:text="@string/price"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:textSize="16sp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/items_currency"
        android:layout_toStartOf="@+id/items_currency" />

    <TextView
        android:id="@+id/items_currency"
        android:text="@string/currency"
        android:layout_width="30dp"
        android:layout_weight="2"
        android:layout_height="25dp"
        android:layout_marginRight="88dp"
        android:layout_marginEnd="88dp"
        android:layout_above="@+id/items_alert"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/items_alert"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="2"
        android:text="@string/alert"
        android:layout_below="@+id/items_ima1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/items_name"
        android:layout_toEndOf="@+id/items_name" />

    <TextView
        android:id="@+id/items_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/items_alert"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/items_ima1"
        android:layout_weight="5"
        android:gravity="center"
        android:text="@string/name"
        android:textSize="30sp" />

</RelativeLayout>